<?xml version="1.0"?>
<tool_dependency>
    <package name="dgpi" version="2.04">
        <install version="1.0">
            <actions>
                <action type="download_by_url" sha256sum="74a3b32c4efe90f3e4f0d70f7af8d26a789a79abe2c6a0c3642d71d87eff0f88">https://github.com/Eduardo-Alves/DGPI/raw/master/DGPI.jar</action>
                <action type="move_file">
                    <source>DGPI.jar</source>
                    <destination>$INSTALL_DIR</destination>
                </action>
                <action type="shell_command">chmod ugo+x $INSTALL_DIR/DGPI.jar</action>
                <action type="set_environment">
                    <environment_variable name="PATH" action="prepend_to">$INSTALL_DIR</environment_variable>
                </action>
                <action type="set_environment">
                    <environment_variable name="JAVA_JAR_PATH" action="set_to">$INSTALL_DIR</environment_variable>
                </action>
            </actions>
        </install>
        <readme></readme>
    </package>
</tool_dependency>
