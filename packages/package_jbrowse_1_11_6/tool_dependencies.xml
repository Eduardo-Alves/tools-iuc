<tool_dependency>
    <package name="perl" version="5.18.1">
        <repository name="package_perl_5_18" owner="iuc" prior_installation_required="True" />
    </package>
    <package name="jbrowse" version="1.11.6">
        <install version="1.0">
            <actions>
                <action type="download_by_url">http://jbrowse.org/wordpress/wp-content/plugins/download-monitor/download.php?id=99&amp;fmt=.zip</action>
                <action type="move_directory_files">
                    <source_directory>JBrowse-1.11.6</source_directory>
                    <destination_directory>$INSTALL_DIR</destination_directory>
                </action>
                <action type="setup_perl_environment">
                    <repository name="package_perl_5_18" owner="iuc">
                        <package name="perl" version="5.18.1" />
                    </repository>
                    <package>JSON</package>
                    <package>Digest::Crc32</package>
                    <package>Hash::Merge</package>
                    <package>Devel::Size</package>
                    <package>Heap::Simple</package>
                    <package>Bio::GFF3::LowLevel::Parser</package>
                    <package force="true">Heap::Simple::XS</package>
                </action>
                <action type="set_environment">
                    <environment_variable action="set_to" name="JBROWSE_SOURCE_DIR">$INSTALL_DIR</environment_variable>
                </action>
            </actions>
        </install>
        <readme>Copy of the JBrowse source with dependencies
        </readme>
    </package>
</tool_dependency>
