<?xml version="1.0"?>
<tool_dependency>
    <package name="FLASH" version="1.2.11">
        <install version="1.0">
            <actions>
                <action type="download_by_url" target_filename="FLASH-1.2.11.tar.gz">http://sourceforge.net/projects/flashpage/files/latest/download</action>
                <action type="shell_command">make</action>
                <action type="move_file">
                    <source>flash</source>
                    <destination>$INSTALL_DIR</destination>
                </action>
                <action type="set_environment">
                    <environment_variable name="PATH" action="prepend_to">$INSTALL_DIR</environment_variable>
                </action>
            </actions>
        </install>
    </package>
</tool_dependency>
