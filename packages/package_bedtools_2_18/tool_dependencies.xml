<?xml version="1.0"?>
<tool_dependency>
    <package name="git" version="2.4.6">
        <repository name="package_git_2_4_6" owner="iuc" prior_installation_required="True" />
    </package>
    
    <package name="bedtools2" version="2.18.2">
        <install version="1.0">
            <actions>
                <action type="make_directory">bedtools2</action>
                <action type="change_directory">bedtools2</action>
                
                <action type="set_environment_for_install">
                    <repository name="package_git_2_4_6" owner="iuc">
                        <package name="git" version="2.4.6" />
                    </repository>
                </action>
                
                <action type="shell_command"><![CDATA[
                    git clone --recursive https://github.com/arq5x/bedtools2.git &&
                    cd bedtools2 && 
                    git reset --hard 393fc3b9b766c76cc62e3f0df4e59ffbff3a55fb &&
                    make
                ]]></action>
                <action type="move_directory_files">
                    <source_directory>bedtools2/bin</source_directory>
                    <destination_directory>$INSTALL_DIR/bin</destination_directory>
                </action>
                <action type="set_environment">
                    <environment_variable name="PATH" action="prepend_to">$INSTALL_DIR/bin</environment_variable>
                </action>
            </actions>
        </install>
        <readme>
            BEDTools is a collection of utilities for comparing, summarizing, and intersecting genomic features in BED, GTF/GFF, VCF and BAM formats.
            https://github.com/arq5x/bedtools2
        </readme>
    </package>
</tool_dependency>



