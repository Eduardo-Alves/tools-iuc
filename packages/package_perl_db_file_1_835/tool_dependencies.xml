<?xml version='1.0' encoding='utf-8'?>
<tool_dependency>
    <package name="perl" version="5.18.1">
        <repository name="package_perl_5_18" owner="iuc" prior_installation_required="True" />
    </package>
    <package name="berkley_db" version="6.1.26">
        <repository name="package_berkley_db_6_1_26" owner="iuc" prior_installation_required="True" />
    </package>
    <package name="perl_db_file" version="1.835">
        <install version="1.0">
            <actions>
                <action type="setup_perl_environment">
                    <repository name="package_perl_5_18" owner="iuc">
                        <package name="perl" version="5.18.1" />
                    </repository>
                    <repository name="package_berkley_db_6_1_26" owner="iuc">
                        <package name="berkley_db" version="6.1.26" />
                    </repository>
                    
                   <!-- allow downloading and installing an Perl package from cpan.org-->
                   <package>https://cpan.metacpan.org/authors/id/P/PM/PMQS/DB_File-1.835.tar.gz</package>
                </action>
                <action type="set_environment">
                    <environment_variable action="append_to" name="PERL5LIB">$INSTALL_DIR/lib/perl5/</environment_variable>	
                </action>
            </actions>
        </install>
        <readme>This package installs DB File CPAN package for Perl.</readme>
    </package>
</tool_dependency>
