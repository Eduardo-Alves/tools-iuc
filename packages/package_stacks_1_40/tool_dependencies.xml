<?xml version="1.0"?>
<tool_dependency>
    <package name="stacks" version="1.40">
        <install version="1.0">
            <actions>
                <action type="download_by_url" sha256sum="bf2304ba4ec44991db327ea77eb0f8c58de6d665162abf72470f5cd9dfb71493">http://catchenlab.life.illinois.edu/stacks/source/stacks-1.40.tar.gz</action>
                <action type="shell_command">./configure --prefix=$INSTALL_DIR</action>
                <action type="shell_command">make</action>
                <action type="shell_command">make install</action>
                <!-- create env.sh -->
                <action type="set_environment">
                        <environment_variable name="PATH" action="prepend_to">$INSTALL_DIR/bin/</environment_variable>
                        <environment_variable name="INSTALL_DIR" action="set_to">$INSTALL_DIR/</environment_variable>
                </action>
           </actions>
        </install>
        <readme>
            This package installs STACKS from the sources available. Based on Cyril Monjeuad version
        </readme>
    </package>
</tool_dependency>
