<?xml version="1.0"?>
<tool id="bcftools_@EXECUTABLE@" name="bcftools @EXECUTABLE@" version="@VERSION@.0">
  <description>Modify header of VCF/BCF files, change sample names.</description>
  <macros>
    <token name="@EXECUTABLE@">view</token>
    <import>macros.xml</import>
  </macros>
  <expand macro="requirements"/>
  <expand macro="stdio"/>
  <expand macro="version_command"/>
  <command>bcftools @EXECUTABLE@

## Default section
--header "${sec_default.header}"
--output "${sec_default.output}"
--samples "${sec_default.samples}"
</command>
  <inputs>
    <section expanded="true" name="sec_default" title="Default Options">
      <param format="data" help="new header" label="Header" name="header" optional="True" type="data"/>
      <param format="data" help="write output to a file [standard output]" label="Output" name="output" optional="True" type="data"/>
      <param format="data" help="new sample names" label="Samples" name="samples" optional="True" type="data"/>
    </section>
  </inputs>
  <outputs/>
  <tests/>
  <help>Modify header of VCF/BCF files, change sample names.</help>
  <expand macro="citations"/>
</tool>
