<?xml version="1.0"?>
<tool id="seqtk_trimfq" name="seqtk_trimfq" version="@WRAPPER_VERSION@.0">
  <description>trim FASTQ using the Phred algorithm</description>
  <macros>
    <import>macros.xml</import>
  </macros>
  <expand macro="requirements"/>
  <expand macro="stdio"/>
  <command><![CDATA[seqtk trimfq -q $q
-l $l
-b $b
-e $e
$in_file
> $default]]></command>
  <inputs>
    <expand macro="in_faq"/>
    <param label="error rate threshold" help="disabled by -b/-e (-q)" name="q" type="float" value="0.05"/>
    <param label="maximally trim down to INT bp" help="disabled by -b/-e (-l)" name="l" type="integer" value="30"/>
    <param label="trim INT bp from left" help="non-zero to disable -q/-l (-b)" name="b" type="integer" value="0"/>
    <param label="trim INT bp from right" help="non-zero to disable -q/-l (-e)" name="e" type="integer" value="0"/>
  </inputs>
  <outputs>
    <data format_source="in_file" hidden="false" name="default" label="$in_file.name trimmed"/>
  </outputs>
  <help><![CDATA[
**What it does**

Trim a fastq file based on Phred scores, or by length

@ATTRIBUTION@
]]></help>
</tool>
