<tool force_history_refresh="false" hidden="false" id="seqtk_comp_1.0" name="seqtk_comp" version="1.0" workflow_compatible="true">
    <description>get the nucleotide composition of FASTA/Q</description>
  <stdio>
    <exit_code level="fatal" range="1:"/>
  </stdio>
  <command><![CDATA[seqtk comp
$u
#if $in_bed:
-r $in_bed
#end if

$in_fa | awk 'BEGIN{print "chr\tlength\t#A\t#C\t#G\t#T\t#2\t#3\t#4\t#CpG\t#tv\t#ts\t#CpG-ts"}1'

> $default]]></command>
  <inputs>
    <param name="in_bed" optional="True" type="data" format="bed" label="bed file"/>
    <param name="in_fa" type="data" format="fasta" label="Input fasta file"/>
  </inputs>
  <outputs>
    <data format="tabular" hidden="false" name="default" label="Nucleotide composition of $in_fa.name"/>
  </outputs>
  <help><![CDATA[TODO]]></help>
</tool>
