<tool force_history_refresh="false" hidden="false" id="seqtk_subseq_1.0" name="seqtk_subseq" version="1.0" workflow_compatible="true">
  <description>extract subsequences from FASTA/Q files</description>
  <stdio>
    <exit_code level="fatal" range="1:"/>
  </stdio>
  <command><![CDATA[seqtk subseq $t
-l $l
$in_file
#if $source.source == 'bed':
  $in_bed
#else
  $name_list
#fi

> $default]]></command>
  <inputs>
    <param name="in_file" type="data" format="fasta,fastq" label="Input fasta/q file"/>
    <conditional name="source">
        <param name="source" type="select" label="Select source of sequence choices">
            <option value="bed">BED</option>
            <option value="name">name.list</option>
        </param>
        <when value="bed">
            <param name="in_bed" type="data" format="fasta" label="Input fasta file"/>
        </when>
        <when value="name">
            <param name="name_list" type="data" format="fasta" label="Input fasta file"/>
        </when>
    </conditional>
    <param checked="false" label="TAB delimited output (-t)" name="t" type="boolean" truevalue="-t"/>
    <param label="sequence line length (-l)" name="l" type="integer" value="0"/>
  </inputs>
  <outputs>
    <data format_source="in_file" hidden="false" name="default">
        <change_format>
            <when input="t" value="-t" format="tabular" />
        </change_format>
    </data>
  </outputs>
  <help><![CDATA[TODO]]></help>
</tool>
