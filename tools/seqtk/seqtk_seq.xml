<?xml version="1.0"?>
<tool id="seqtk_seq" name="seqtk_seq" version="@WRAPPER_VERSION@.0">
  <description>common transformation of FASTA/Q</description>
  <macros>
    <import>macros.xml</import>
  </macros>
  <expand macro="requirements"/>
  <expand macro="stdio"/>
  <command><![CDATA[seqtk seq -q $q
-X $X
-n $n
-l $l
-Q $Q
-s $s
-f $f
#if $M:
-M $M
#end if
-L $L
$c
$r
$A
$C
$N
$x1
$x2
$V

$in_file
> $default]]></command>
  <inputs>
    <param name="in_file" type="data" format="fasta,fastq" label="Input fasta/q file"/>
    <param label="mask bases with quality lower than INT (-q)" name="q" type="integer" value="0"/>
    <param label="mask bases with quality higher than INT (-X)" name="X" type="integer" value="255"/>
    <param area="false" default="0" label="masked bases converted to CHAR; 0 for lowercase (-n)" name="n" type="text"/>
    <param label="number of residues per line; 0 for 2^32-1 (-l)" name="l" type="integer" value="0"/>
    <param label="quality shift: ASCII-INT gives base quality (-Q)" name="Q" type="integer" value="33"/>
    <param label="random seed (effective with -f) (-s)" name="s" type="integer" value="11"/>
    <param label="sample FLOAT fraction of sequences (-f)" name="f" type="float" value="1"/>
    <param area="false" default="null" label="mask regions in BED or name list FILE (-M)" name="M" type="text"/>
    <param label="drop sequences with length shorter than INT (-L)" name="L" type="integer" value="0"/>
    <param checked="false" label="mask complement region (effective with -M) (-c)" name="c" type="boolean" falsevalue="" truevalue="-c"/>
    <param checked="false" label="reverse complement (-r)" name="r" type="boolean" falsevalue="" truevalue="-r"/>
    <param checked="false" label="force FASTA output (discard quality) (-A)" name="A" type="boolean" falsevalue="" truevalue="-A"/>
    <param checked="false" label="drop comments at the header lines (-C)" name="C" type="boolean" falsevalue="" truevalue="-C"/>
    <param checked="false" label="drop sequences containing ambiguous bases (-N)" name="N" type="boolean" falsevalue="" truevalue="-N"/>
    <param checked="false" label="output the 2n-1 reads only (-1)" name="x1" type="boolean" falsevalue="" truevalue="-1"/>
    <param checked="false" label="output the 2n reads only (-2)" name="x2" type="boolean" falsevalue="" truevalue="-2"/>
    <param checked="false" label="shift quality by '(-Q) - 33'  (-V)" name="V" type="boolean" falsevalue="" truevalue="-V"/>
  </inputs>
  <outputs>
    <data format_source="in_file" hidden="false" name="default"/>
  </outputs>
  <help><![CDATA[
**What it does**

Various utilities for transforming FASTA/Q data

**Attribution**

This Galaxy tool relies on the seqtk toolkit from  `lh3/seqtk
<https://github.com/lh3/seqtk/>`_, developed by Heng Li at the Broad Institute


]]></help>
</tool>
