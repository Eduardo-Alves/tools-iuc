<tool force_history_refresh="false" hidden="false" id="seqtk_mergefa_1.0" name="seqtk_mergefa" version="1.0" workflow_compatible="true">
    <description>merge two FASTA/Q files</description>
  <stdio>
    <exit_code level="fatal" range="1:"/>
  </stdio>
  <command><![CDATA[seqtk mergefa -q $q
$i
$m
$r
$h

$in_fa1
$in_fa2

> $default]]></command>
  <inputs>
    <param name="in_fa1" type="data" format="fasta" label="Input fasta file #1"/>
    <param name="in_fa2" type="data" format="fasta" label="Input fasta file #2"/>

    <param label="quality threshold (-q)" name="q" type="integer" value="0"/>
    <param checked="false" label="take intersection (-i)" name="i" type="boolean" truevalue="-i"/>
    <param checked="false" label="convert to lowercase when one of the input base is N (-m)" name="m" type="boolean" truevalue="-m"/>
    <param checked="false" label="pick a random allele from het (-r)" name="r" type="boolean" truevalue="-r"/>
    <param checked="false" label="suppress hets in the input (-h)" name="h" type="boolean" truevalue="-h"/>
  </inputs>
  <outputs>
    <data format="fasta" hidden="false" name="default"/>
  </outputs>
  <help><![CDATA[TODO]]></help>
</tool>
