<tool force_history_refresh="false" hidden="false" id="seqtk_cutN_1.0" name="seqtk_cutN" version="1.0" workflow_compatible="true">
  <description>cut sequence at long N</description>
  <stdio>
    <exit_code level="fatal" range="1:"/>
  </stdio>
  <command><![CDATA[seqtk cutN -n $n
-p $p
$g
$in_fa
> $default]]></command>
  <inputs>
    <param label="min size of N tract (-n)" name="n" type="integer" value="1000"/>
    <param label="penalty for a non-N (-p)" name="p" type="integer" value="10"/>
    <param checked="false" label="print gaps only, no sequence (-g)" name="g" type="boolean" truevalue="-g"/>
    <param name="in_fa" optional="True" type="data" format="fasta" label="Input fasta fle"/>
  </inputs>
  <outputs>
    <data format="fasta" hidden="false" name="default" label="$in_fa.name split on N runs longer than $n"/>
  </outputs>
  <help><![CDATA[]]></help>
</tool>
