<?xml version="1.0"?>
<tool id="hmmer.hmmpress" name="hmmpress" version="@WRAPPER_VERSION@.0">
  <description>prepare an HMM database for faster hmmscan searches</description>
  <macros>
    <import>macros.xml</import>
  </macros>
  <expand macro="requirements"/>
  <expand macro="stdio"/>
  <command><![CDATA[
hmmpress -f $hmmfile > $output;
mv ${hmmfile}.h3m ${output}.h3m;
mv ${hmmfile}.h3i ${output}.h3i;
mv ${hmmfile}.h3f ${output}.h3f;
mv ${hmmfile}.h3p ${output}.h3p;
      ]]></command>
  <inputs>
    <param name="hmmfile" type="data" label="HMM model" format="hmmer2,hmmer3"/>
  </inputs>
  <outputs>
    <data format="txt" name="output" label="Compressed HMM Database">
    </data>
  </outputs>
  <tests>
    <test>
      <param name="hmmfile" value="globins4.hmm"/>
      <output name="output" file="hmmpress.out" lines_diff="10"/>
    </test>
  </tests>
  <help><![CDATA[
**What it does**

Format an HMM database into a binary format for hmmscan

@ATTRIBUTION@
]]></help>
  <expand macro="citation"/>
</tool>
