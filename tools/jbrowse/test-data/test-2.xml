<tracks>
    <track>
        <files>
            <trackFile>
                <file>test-data/merlin.gff</file>
                <extension>gff3</extension>
                <label>GeneMarkS Gene Calls</label>
            </trackFile>
        </files>

        <category>Gene Calls</category>
        <format>gene_calls</format>

        <options>
            <style>
                <className>feature</className>
                <description>note,description</description>
                <label>name,id</label>
                <height>100px</height>
            </style>


            <gff>
                <match>false</match>
            </gff>

            <scaling>
                <method>score</method>
                <algo>linear</algo>
                <scales>
                    <type>automatic</type>
                </scales>
                <scheme>
                    <type>brewer</type>
                    <brewer>Spectral</brewer>
                </scheme>
            </scaling>
        </options>
    </track>
    <track>
        <files>
            <trackFile>
                <file>test-data/interpro.gff</file>
                <extension>gff3</extension>
                <label>InterProScan</label>
            </trackFile>
        </files>

        <category>Functional Scans</category>
        <format>gene_calls</format>

        <options>
            <style>
                <className>feature</className>
                <description>note,description</description>
                <label>name,id</label>
                <height>100px</height>
            </style>


            <gff>
                <match>false</match>
            </gff>

            <scaling>
                <method>score</method>
                <algo>linear</algo>
                <scales>
                    <type>automatic</type>
                </scales>
                <scheme>
                    <type>opacity</type>
                    <color>__auto__</color>
                </scheme>
            </scaling>
        </options>
    </track>
    <track>
        <files>
            <trackFile>
                <file>test-data/blast.xml</file>
                <extension>xml</extension>
                <label>BLAST against NR</label>
            </trackFile>
        </files>

        <category>BLAST</category>
        <format>blast</format>

        <options>
            <style>
                <className>feature</className>
                <description>Hit_titles</description>
                <label>description</label>
                <height>600px</height>
            </style>


            <blast>
                <parent>test-data/merlin.gff</parent>
                <protein>true</protein>
                <min_gap>10</min_gap>
                <match>true</match>
            </blast>

            <scaling>
                <method>score</method>
                <algo>linear</algo>
                <scales>
                    <type>automatic</type>
                </scales>
                <scheme>
                    <type>brewer</type>
                    <brewer>PRGn</brewer>
                </scheme>
            </scaling>
        </options>
    </track>
    <track>
        <files>
            <trackFile>
                <file>test-data/test.vcf</file>
                <extension>vcf</extension>
                <label>SNPs</label>
            </trackFile>
        </files>
        <category>VCF</category>
        <format>vcf</format>

        <options>
            <style>
            </style>



        </options>
    </track>
    <track>
        <files>
            <trackFile>
                <file>test-data/154.bw</file>
                <extension>bigwig</extension>
                <label>154.bw</label>
            </trackFile>
        </files>
        <category>Sequencing</category>
        <format>wiggle</format>

        <options>
            <style>
            </style>


            <wiggle>
                <type>JBrowse/View/Track/Wiggle/XYPlot</type>
                <variance_band>false</variance_band>
                <min>20</min>
                <max>100</max>
                <color_config>automatic</color_config>
                <color>__auto__</color>
                <bicolor_pivot>zero</bicolor_pivot>
            </wiggle>

        </options>
    </track>
    <track>
        <files>
            <trackFile>
                <file>test-data/154.bam</file>
                <extension>bam</extension>
                <label>154.bam</label>
            </trackFile>
        </files>
        <category>Sequencing</category>
        <format>pileup</format>
        <options>
            <style>
            </style>
            <pileup>
                <auto_snp>true</auto_snp>
                <bam_indices>
                    <bam_index>test-data/154.bam.bai</bam_index>
                </bam_indices>
            </pileup>
        </options>
    </track>
</tracks>
